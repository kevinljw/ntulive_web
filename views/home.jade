extends layout

block content

  .row.jumbotron.jumbotronHome
    .container.backColor
      h1 NTU LIVE
      p.lead Leadership, Innovation, Value 
      p 打造台灣未來醫療科技CEO人才計劃
  .container
    .row
      .col-sm-8
        .page-header
          h3 Announcements
        each val in nArticles
          .homeAnn
            h3 #{val.title}
            p.homeAnnContent #{val.content}
            .homeSubTag 
              i.fa.fa-user  #{val.author}
            .homeSubTag
              i.fa.fa-clock-o  #{val.timestamp}
            
            p 
              a.btn.btn-default(href='announcements/\##{val.timestamp}', role='button') View details »
            hr
        
      .col-sm-4
        .page-header
          h3 Sharing
        each val in nShares
          .homeSha
            h4 #{val.title}
            p #{val.description}
            .homeSubTag 
              i.fa.fa-user  #{val.upload_user}
            .homeSubTag
              i.fa.fa-clock-o  #{val.timestamp}
            p 
              a.btn.btn-default(href='sharing/\##{val.timestamp}', role='button') View details »
            hr