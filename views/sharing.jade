extends layout

block content
		.row.jumbotron
			.container
				h2 Sharing
				p 
				p 
				p 

		.container
			.row
				.col-sm-12
					each val in shareList
						.panel(class='panel-default')
							.panel-heading	#{val.title}
							.eachShareItem									
								li=val.timestamp
								ul Files:
									each eachFileVal,indexOfEachFile in val.filespath
										li
											a(href='files/#{val.filesname[indexOfEachFile]}') #{eachFileVal}
			.row
				.col-sm-12
					.uploadFilesForm
						form.form-horizontal(action='sharing/uploadfiles/'+user.id, method='POST', enctype='multipart/form-data')
							input(type='hidden', name='_csrf', value=_csrf)
							.form-group
								label.col-sm-3.control-label(for='title') Title
								.col-sm-7
									input.form-control(type='text', name='title', id='title')
							.form-group
								label.col-sm-3.control-label(for='discription') Discription
								.col-sm-7
									input.form-control(type='discription', name='discription', id='discription')
							.form-group
								label.col-sm-3.control-label(for='userFiles') Uploader
								.col-sm-7
									input.file(id='input-2', type='file', data-preview-file-type='text', multiple, name='userFiles')

				